<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('incs/head') %>
  <link rel="stylesheet" href="/css/styleCONTR.css">
<script  src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

  <title>Contratos</title>
</head>

<body>
    <header>
      <%- include('incs/header') %>
        
      </header>
       <div class="container">
         <div class="contrato-container">
           
           <div class="contrato">
             <h2>CONTRATO</h2>
             <div class="contrato-items">
               <form action="" id="myform" method="">
                
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Oferente</th>
                        <th scope="col">Fecha Inicio</th>
                        <th scope="col">Fecha Fin</th>
                        <th scope="col">Cotización</th>
                        
                      </tr>
                    </thead>
                    <tbody>

                      <% for (let contrato of contratos) { %>
                        <tr data-id="<%= contrato.Id_propuesta %>">
                          <th scope="row">
                            <%= contrato.id_propuesta %>
                          </th>
                          <td>
                            <%= contrato.id_oferente_p %>
                          </td>
                          <td>
                            <%= contrato.fecha_inicio %>
                          </td>
                          <td>
                            <%= contrato.fecha_fin %>
                          </td>
                          <td>
                            <%= contrato.monto_a_abonar %>
                          </td>
                          
                          <td class="d-flex">
                           
                              <!-- <input type="hidden" name="_method" value="delete"> -->
                             
                          <form class="form-inline form-modal-confirmation"
                              action="/contrato/<%= contrato.estado_tipo %>/estado_Acep" method="post"
                              data-id="<%= contrato.estado_tipo %>">
                              <button type="button"
                                class="btn btn-primary"
                                data-id="<%= contrato.estado_tipo %>">
                                 Aceptar
                              </button>
                          </form> 

                          <form class="form-inline form-modal-confirmation"
                              action="/contrato/<%= contrato.estado_tipo %>/estado_Rech" method="post"
                              data-id="<%= contrato.estado_tipo %>">
                              <button type="button"
                                class="btn btn-primary"
                                data-id="<%= contrato.estado_tipo %>">
                                 Rechazar
                              </button>
                          </form> 

                          <form class="form-inline form-modal-confirmation"
                              action="/contrato/<%= contrato.estado_tipo %>/estado_Cancel" method="post"
                              data-id="<%= contrato.estado_tipo %>">
                              <button type="button"
                                class="btn btn-primary"
                                data-id="<%= contrato.estado_tipo %>"
                                data-message="Desea cancelar el contrato <%= contrato.Id_propuesta  %>"
                                data-title="Cancelar Contrato"
                                data-confirmation-text-button="Cancelar"
                                >
                                 Cancelar
                                 
                              </button>
                              
                          </form> 

                            <button type="button" class="btn btn-primary"  data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@mdo" id="puntuacion">Dejar puntuación</button>
                                  
                                      
                            
                          </td>

                       
                      
                      <% } %>
                      </tbody>
                      
               
                  </table> 
                

               <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                 <div class="modal-dialog">
                   <div class="modal-content">
                     <div class="modal-header">
                       <h1 class="modal-title fs-5" id="exampleModalLabel">CALIFICAR ESTE SERVICIO</h1>
                       <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                     </div>
                     <div class="modal-body">
                       <form>
                         <div class="mb-3">
                           <form >
                           <p class="clasificacion">
                               <input id="radio1" type="radio" name="estrellas" value="5"><!--
                               --><label for="radio1">★</label><!--
                               --><input id="radio2" type="radio" name="estrellas" value="4"><!--
                               --><label for="radio2">★</label><!--
                               --><input id="radio3" type="radio" name="estrellas" value="3"><!--
                               --><label for="radio3">★</label><!--
                               --><input id="radio4" type="radio" name="estrellas" value="2"><!--
                               --><label for="radio4">★</label><!--
                               --><input id="radio5" type="radio" name="estrellas" value="1"><!--
                               --><label for="radio5">★</label>
                             </p>
                           </form>
                         </div>
                         <div class="mb-3">
                           <label for="message-text" class="col-form-label">Mensaje:</label>
                           <textarea class="form-control" id="message-text" placeholder="Ingrese aqui su mensaje"></textarea>
                         </div>
                       </form>
                     </div>
                     <div class="modal-footer">
                       <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                       <button type="button" class="btn btn-danger">Enviar</button>
                     </div>
                   </div>
                 </div>
               </div>
               
               

              </form>


             </div>
           </div>
         </div>
       </div>
</body>

</html>